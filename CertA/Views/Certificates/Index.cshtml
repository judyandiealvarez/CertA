@model List<CertA.Models.CertificateEntity>
@{
    ViewData["Title"] = "Certificates";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Certificates</h2>
    <a class="btn btn-primary" asp-action="Create">New Certificate</a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-info">
        <h4>No certificates found</h4>
        <p>Get started by creating your first certificate.</p>
        <a asp-action="Create" class="btn btn-primary">Create Certificate</a>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Common Name</th>
                <th>Serial Number</th>
                <th>Status</th>
                <th>Issued Date</th>
                <th>Expiry Date</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var cert in Model)
            {
                <tr>
                    <td>@cert.CommonName</td>
                    <td><code>@cert.SerialNumber</code></td>
                    <td><span class="badge bg-@(cert.Status == CertA.Models.CertificateStatus.Issued ? "success" : "warning")">@cert.Status</span></td>
                    <td>@cert.IssuedDate.ToString("yyyy-MM-dd")</td>
                    <td>@cert.ExpiryDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@cert.Id" class="btn btn-sm btn-outline-primary">View</a>
                        <form asp-action="Delete" asp-route-id="@cert.Id" method="post" style="display: inline-block;" onsubmit="return confirm('Are you sure you want to delete this certificate? This action cannot be undone.');">
                            <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
