@model CertA.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">CertA Certification Authority</h1>
    <p class="lead">Manage your certificates and certificate authority</p>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-lightning"></i> Quick Actions
                </h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/Certificates/Create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create New Certificate
                    </a>
                    <a href="/Certificates" class="btn btn-outline-primary">
                        <i class="bi bi-list"></i> View All Certificates
                    </a>
                    <a href="/Certificates/Authority" class="btn btn-outline-success">
                        <i class="bi bi-shield-lock"></i> Certificate Authority
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-graph-up"></i> Statistics
                </h5>
            </div>
            <div class="card-body">
                <div class="row text-center">
                    <div class="col-6">
                        <h3 class="text-primary">@Model.TotalCertificates</h3>
                        <small class="text-muted">Total Certificates</small>
                    </div>
                    <div class="col-6">
                        <h3 class="text-@(Model.ActiveCA ? "success" : "warning")">@(Model.ActiveCA ? "1" : "0")</h3>
                        <small class="text-muted">Active CA</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-clock-history"></i> Recent Certificates
                </h5>
            </div>
            <div class="card-body">
                @if (Model.RecentCertificates.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var cert in Model.RecentCertificates)
                        {
                            <div class="list-group-item d-flex justify-content-between align-items-center">
                                <div>
                                    <strong>@cert.CommonName</strong>
                                    <br>
                                    <small class="text-muted">@cert.Type Certificate</small>
                                </div>
                                <span class="badge bg-@(cert.Status == CertificateStatus.Issued ? "success" : "warning")">@cert.Status</span>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center text-muted">
                        <i class="bi bi-inbox fs-1"></i>
                        <p class="mt-2">No certificates yet</p>
                        <a href="/Certificates/Create" class="btn btn-sm btn-primary">Create First Certificate</a>
                    </div>
                }
                <div class="mt-3">
                    <a href="/Certificates" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-info-circle"></i> Getting Started
                </h5>
            </div>
            <div class="card-body">
                <ol class="mb-0">
                    <li>Download and install the <a href="/Certificates/Authority">Root CA Certificate</a></li>
                    <li>Create certificates for your domains</li>
                    <li>Download certificates and keys as needed</li>
                    <li>Install certificates on your servers</li>
                </ol>
            </div>
        </div>
    </div>
</div>